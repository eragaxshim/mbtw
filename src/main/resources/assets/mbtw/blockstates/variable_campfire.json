{
  "multipart": [
    {   "when": { "facing":  "east", "lit": "false", "embers":  "false"},
      "apply": { "model": "mbtw:block/campfire_unlit",
        "y": 270
      }
    },
    {   "when": { "facing":  "north", "lit": "false", "embers":  "false"},
      "apply": { "model": "mbtw:block/campfire_unlit",
        "y": 180
      }
    },
    {   "when": { "facing":  "south", "lit": "false", "embers":  "false"},
      "apply": { "model": "mbtw:block/campfire_unlit" }
    },
    {   "when": { "facing":  "west", "lit": "false", "embers":  "false"},
      "apply": { "model": "mbtw:block/campfire_unlit",
        "y": 90
      }
    },
    {   "when": { "fire_size": "1", "lit": "true"},
      "apply": { "model": "mbtw:block/campfire_small_fire" }
    },
    {   "when": { "fire_size": "2", "lit": "true"},
      "apply": { "model": "mbtw:block/campfire_medium_fire" }
    },
    {   "when": { "fire_size": "3", "lit": "true"},
      "apply": { "model": "mbtw:block/campfire_standard_fire" }
    },
    {   "when": { "fire_size": "4", "lit": "true"},
      "apply": { "model": "mbtw:block/campfire_large_fire" }
    },
    {   "when": { "OR": [
          { "facing":  "east", "lit": "true" },
          { "facing":  "east", "lit": "false", "fire_size": "0" }
        ]},
      "apply": { "model": "mbtw:block/campfire_base_lit",
        "y": 270
      }
    },
    {   "when": { "OR": [
          { "facing":  "north", "lit": "true" },
          { "facing":  "north", "lit": "false", "fire_size": "0" }
        ]},
      "apply": { "model": "mbtw:block/campfire_base_lit",
        "y": 180
      }
    },
    {   "when": { "OR": [
          { "facing":  "south", "lit": "true" },
          { "facing":  "south", "lit": "false", "fire_size": "0" }
        ]},
      "apply": { "model": "mbtw:block/campfire_base_lit" }
    },
    {   "when": { "OR": [
          { "facing":  "west", "lit": "true" },
          { "facing":  "west", "lit": "false", "fire_size": "0" }
        ]},
      "apply": { "model": "mbtw:block/campfire_base_lit",
        "y": 90
      }
    },
    {   "when": { "facing":  "east", "lit": "false", "embers":  "true"},
      "apply": { "model": "mbtw:block/campfire_embers",
        "y": 270
      }
    },
    {   "when": { "facing":  "north", "lit": "false", "embers":  "true"},
      "apply": { "model": "mbtw:block/campfire_embers",
        "y": 180
      }
    },
    {   "when": { "facing":  "south", "lit": "false", "embers":  "true"},
      "apply": { "model": "mbtw:block/campfire_embers" }
    },
    {   "when": { "facing":  "west", "lit": "false", "embers":  "true"},
      "apply": { "model": "mbtw:block/campfire_embers",
        "y": 90
      }
    }
  ]
}

